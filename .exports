#!/usr/bin/env sh

# Preferred editor
export EDITOR='vim';

# Git user info
export GIT_AUTHOR_NAME="Sebastian Van Sande"
export GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
export GIT_AUTHOR_EMAIL="sebastian@vansande.org"
export GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Allow mouse scrolling in less
export LESS="RS"

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY=~/.node_history;
# Allow 32³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='32768';
# Use sloppy mode by default, matching web browsers.
export NODE_REPL_MODE='sloppy';

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Java
export JAVA_VERSION=1.8
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_72.jdk/Contents/Home
export MAVEN_OPTS=-Xmx2048m
export M2_HOME=/usr/local/Cellar/maven/3.3.9/libexec

# Medialaan
export MEDIALAAN=~/Work/Medialaan
export NODE_CONFIG_DIR=~/Work/Medialaan/projects/medialaan-services-config/local
export NODE_ENV="development"